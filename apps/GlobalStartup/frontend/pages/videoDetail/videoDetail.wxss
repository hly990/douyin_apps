.page {
  background-color: #000;
  min-height: 100vh;
  color: #fff;
}

.video-container {
  position: relative;
  width: 100%;
  height: 420rpx;
}

.video {
  width: 100%;
  height: 100%;
}

.video-info {
  padding: 20rpx;
}

.video-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.author-info {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}

.author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.author-name {
  font-size: 28rpx;
  color: #ffffff;
  flex: 1;
}

.follow-btn {
  padding: 10rpx 20rpx;
  background-color: #ff4757;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #fff;
}

.follow-btn.followed {
  background-color: #555;
}

.video-stats {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx solid #333;
}

.video-desc {
  padding: 20rpx;
  font-size: 28rpx;
  color: #ddd;
  line-height: 1.5;
  border-bottom: 1rpx solid #333;
}

.interaction-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  border-bottom: 1rpx solid #333;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-icon {
  font-size: 50rpx;
  margin-bottom: 10rpx;
}

.action-text {
  font-size: 24rpx;
  color: #bbb;
}

.comment-section {
  padding: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.comment-list {
  margin-bottom: 20rpx;
}

.comment-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #333;
}

.commenter-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-content {
  flex: 1;
}

.commenter-name {
  font-size: 26rpx;
  color: #bbb;
  margin-bottom: 10rpx;
}

.comment-text {
  font-size: 28rpx;
  color: #fff;
  margin-bottom: 10rpx;
}

.comment-actions {
  display: flex;
  font-size: 24rpx;
  color: #888;
}

.comment-time {
  margin-right: 30rpx;
}

.comment-like, .comment-reply {
  margin-right: 30rpx;
}

.reply-container {
  margin-left: 84rpx;
  padding: 15rpx 0;
  border-top: 1rpx solid #333;
}

.reply-item {
  margin-bottom: 15rpx;
}

.replier-name {
  font-size: 24rpx;
  color: #999;
  display: inline;
}

.reply-text {
  font-size: 26rpx;
  color: #fff;
  display: inline;
}

.comment-input-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #222;
  padding: 20rpx;
  display: flex;
  align-items: center;
  z-index: 100;
}

.comment-input {
  flex: 1;
  background-color: #333;
  border-radius: 40rpx;
  padding: 15rpx 25rpx;
  color: #fff;
  font-size: 28rpx;
}

.send-btn {
  margin-left: 20rpx;
  padding: 10rpx 25rpx;
  background-color: #ff4757;
  color: #fff;
  border-radius: 40rpx;
  font-size: 26rpx;
}

.related-videos {
  padding: 20rpx;
}

.related-video-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #333;
}

.related-video-cover {
  width: 180rpx;
  height: 240rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  position: relative;
}

.video-duration {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.related-video-info {
  flex: 1;
}

.related-video-title {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.related-video-author {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.related-video-stats {
  font-size: 22rpx;
  color: #777;
}

.loading {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

.no-more {
  text-align: center;
  padding: 30rpx 0;
  color: #777;
  font-size: 26rpx;
}

.safe-area-bottom {
  height: 120rpx;
} 
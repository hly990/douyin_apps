.container {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  margin-bottom: 40rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #eaeaea;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.status-section {
  margin-bottom: 40rpx;
}

.status-card {
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.status-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.status-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.status-success {
  color: #07c160;
}

.status-error {
  color: #fa5151;
}

.token-text {
  font-size: 24rpx;
  word-break: break-all;
  display: block;
  margin-top: 10rpx;
  color: #666;
  font-family: monospace;
}

.user-info {
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1px solid #eaeaea;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.info-label {
  color: #666;
  width: 150rpx;
}

.info-value {
  color: #333;
  flex: 1;
}

.action-buttons {
  margin-bottom: 40rpx;
}

.login-btn, .logout-btn {
  width: 100%;
  margin-bottom: 20rpx;
}

.login-btn {
  background-color: #07c160;
  color: white;
}

.logout-btn {
  background-color: #fff;
  color: #fa5151;
  border: 1px solid #fa5151;
}

/* 分步登录样式 */
.step-login {
  margin-top: 30rpx;
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.step-btn {
  margin: 15rpx 0;
  font-size: 28rpx;
}

.step-1 {
  background-color: #1677FF;
  color: white;
}

.step-2 {
  background-color: #36CFC9;
  color: white;
}

.step-btn[disabled] {
  background-color: #ccc !important;
  color: #999 !important;
}

.debug-section {
  background-color: #333;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 40rpx;
}

.debug-section .section-title {
  color: #fff;
  border-bottom-color: #555;
}

.debug-content {
  padding: 10rpx;
}

.debug-text {
  color: #aaa;
  font-size: 26rpx;
  font-family: monospace;
  display: block;
  margin-bottom: 10rpx;
}

.login-status {
  margin-top: 20rpx;
  padding: 10rpx;
  color: #666;
  font-size: 28rpx;
  text-align: center;
}

.login-steps {
  margin-top: 30rpx;
  padding: 20rpx;
  border-radius: 8rpx;
  background-color: #f8f8f8;
}

.login-step {
  padding: 15rpx 0;
  display: flex;
  align-items: center;
}

.step-number {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #e0e0e0;
  color: #fff;
  font-size: 24rpx;
  margin-right: 15rpx;
}

.step-number.active {
  background-color: #07c160;
}

.step-number.error {
  background-color: #ff4d4f;
}

.step-content {
  flex: 1;
  font-size: 28rpx;
}

.error-message {
  color: #ff4d4f;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.navigation-debug {
  margin-top: 30rpx;
  padding: 20rpx;
  border-top: 1px solid #eee;
  font-size: 24rpx;
  color: #999;
} 